<script>
	$(document).ready(function() {
		// show the alert
		setTimeout(function() {
			$(".alert").alert('close');
		}, 4000);
	});
</script>
{% if alertType == 'succes'    %}
    <div class="col-lg-12 alert alert-success" role="alert">
    	<i class="fa fa-smile-o" style="font-size: 20px;"></i>
    	{{ message }}
    </div>
{% elseif alertType == "info" %}
    <div class="col-lg-12 alert alert-info" role="alert">
    	<i class="fa fa-smile-o" style="font-size: 20px;"></i>
    	{{ message }}
    </div>
{% elseif alertType == 'error'   %}
    <div class="col-lg-12 alert alert-error" role="alert">
    	<i class="fa fa-smile-o" style="font-size: 20px;"></i>
    	{{ message }}
    </div>
{% endif %}