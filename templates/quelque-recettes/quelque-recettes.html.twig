{% extends 'base.html.twig' %}

{% block body %}

{% if(recettes|length > 0) %}
<div class="row">
	{% for recette in recettes %}
	<div class="col-lg-3 col-md-3 col-sm-3">
    	<div class="card" style="padding: 3px; text-align: center;">
            <a href="{{ path('mas_recette',{'id':recette.id}) }}">
            	<img src="/uploads/brochures/{{ recette.image }}" alt="" style="width:100%;max-height: 200px;min-height: 200px">
            </a>
      		<h1>{{recette.nom}}</h1>
    	</div> 
	</div>
	{% endfor %}
</div>
{% else %}
<div class="col-lg-12 alert alert-info">
	{{ 'mma.some.recipe.norecipeconfigured'|trans }}
</div>
{% endif %}

{% endblock %}
