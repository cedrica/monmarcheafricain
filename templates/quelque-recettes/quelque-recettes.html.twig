{% extends 'base.html.twig' %}

{% block body %}

{% if(recettes|length > 0) %}
<div class="row">
	{% for recette in recettes %}
	<div class="col-lg-3 col-md-3 col-sm-3">
		<div class="thumbnail">
			<a href="{{ path('mas_recette',{'id':recette.id}) }}"><img
				src="/uploads/brochures/{{ recette.image }}" class="img-rounded"
				width="200px" height="200px"></img></a>
			<div style="text-align: center; margin-top: 10px">
				<b>{{recette.nom|upper}}</b>
			</div>
		</div>

	</div>
	{% endfor %}
</div>
{% else %}
<div class="col-lg-12 alert alert-info">
	{{ 'mma.some.recipe.norecipeconfigured'|trans }}
</div>
{% endif %}

{% endblock %}
