{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">Adresses</div>
	<div class="row divider"></div>
	<div class="row">
		<div class="col-lg-3">
			<p style="text-align: center;">03. Connexion</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">04. Adresse</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">05. Livraison</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">06. Payement</p>
			<div style="background-color: #33cc33; width: 100%; height: 10px"></div>
		</div>
	</div>
	<div class="row" style="margin-bottom: 30px"></div>
	<div class="row panel panel-default">
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-6">Votre carte de credit</div>
				<div class="col-lg-3">Nom de la carte</div>
				<div class="col-lg-3">Date dÂ´expiration</div>
			</div>

			<div class="row divider"></div>
			{% for carte in cartesDeCredit %}
			<div class="row alert alert-error" role="alert">
				<div class="col-lg-6">
					<input type="radio" name="carte"> <i
						class="fa fa-cc-mastercard" style="font-size: 20px;" checked="true"></i>
					{{ carte.nomDeLaCarte }}
					ending with
					{{ carte.numeroDeLaCarte|slice(carte.numeroDeLaCarte|length - 4, carte.numeroDeLaCarte|length) }}
				</div>
				<div class="col-lg-3">{{ carte.nomDeLaCarte }}</div>
				<div class="col-lg-2">{{ carte.dateDExpiration|date('Y/m') }}</div>
				<div class="col-lg-1"><a href="{{ path('commander_controller_suprimer_carte',{'carteId':carte.id}) }}" class="btn fa fa-trash" style="color:red"></a></div>
			</div>
			{% endfor %}
			<span class="fa fa-plus"></span> <a href="" data-toggle="modal"
				data-target="#ajouterCarteModal">Ajouter un moyen de payement</a>
		</div>
		<div class="panel-footer"><a class="btn" href="{{ path('commander_controller_achever_le_payement') }}">Achever le payement</a></div>
	</div>
{{  include("commander/ajouter-carte.html.twig") }}
{% endblock %}
