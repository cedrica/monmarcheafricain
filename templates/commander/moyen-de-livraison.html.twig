{% extends 'base.html.twig' %}

{% block body %}

	<div class="row">
		<div class="col-lg-3">
			<p style="text-align: center;">03. Connexion</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">04. Adresse</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">05. Livraison</p>
			<div style="background-color: #33cc33; width: 100%; height: 10px"></div>
		</div>
		<div class="col-lg-3">
			<p style="text-align: center;">06. Payement</p>
			<div style="background-color: lightgray; width: 100%; height: 10px"></div>
		</div>
	</div>
	<table class="table">
		{%   for panierItem in app.session.get('panier').panieritems %}
		<tr valign="center">
			<td><img src="/uploads/brochures/{{  panierItem.produit.image }}" height="200px;"
				width="200px"></td>
			<td>
				<table>
					<tr>
						<td><h3>
								<b>{{  panierItem.produit.nom }}</b>
							</h3></td>
					</tr>
					<tr>
						<td>Prix unitaire: {{  panierItem.produit.prix }} €
						</td>
					</tr>
					<tr>
						<td>Reference: {{  panierItem.produit.reference }}</td>
					</tr>
				</table>
			</td>
			<td>
				<table>
					<tr>
						<td colspan="3"><b>Choisissez votre moyen d´envoie</b></td>
					</tr>
					<tr>
						<td><input type="radio" name="gender" value="chronopost"></td> <td align="left">Chronopost</td>
					</tr>
					<tr>
						<td><input type="radio" name="gender" value="express"></td> <td align="left">Express</td>
					</tr>
				</table>
			</td>
		</tr>
		{%  endfor %}
	</table>
	<div class="row well">
		<input type="checkbox">J'ai lu les conditions générales de
		vente et j'y adhère sans réserve. <a>(Lire les Conditions
			générales de vente)</a></input>
	</div>
	<div class="row">
		<a class="btn" href="{{ path('commander_controller_aller_a_la_caisse',{'compteId':app.session.get('compte').id,'_locale':app.request.locale}) }}">Aller à la caisse</a>
	</div>

{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/livraison.css') }}" />
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/livraison.js') }}"></script>
{% endblock %}