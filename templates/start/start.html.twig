
{% extends 'base.html.twig' %}

{% block body %}
	<div id="myCarousel" class="carousel slide content"
		data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
			<li data-target="#myCarousel" data-slide-to="3"></li>

		</ol>

		<div class="carousel-inner">
			<div class="item active" id="depot">
				<img src="/images/marche2.png" style="min-height:500px;max-height:500px;width:100%"/>

				<div class="carousel-caption d-none d-md-block">
					<h3>{{ 'mma.home.depot'|trans }}</h3>
					<p>{{ 'mma.home.depot.comment'|trans }}</p>
				</div>
			</div>
			<div class="item" id="exposition">
				<img src="/images/marche1.png"  style="min-height:500px;max-height:500px;width:100%"/>
				<div class="carousel-caption d-none d-md-block">
					<h3>{{ 'mma.home.exposition'|trans }}</h3>
					<p>{{ 'mma.home.exposition.comment'|trans }}</p>
				</div>
			</div>
			<div class="item" id="transport">
				<img src="/images/transport.png" style="min-height:500px;max-height:500px;width:100%" />
				<div class="carousel-caption d-none d-md-block">
					<h3>{{ 'mma.home.import'|trans }}</h3>
					<p>{{ 'mma.home.import.comment'|trans }}</p>
				</div>
			</div>
			<div class="item" id="region">
				<img src="/images/regionsdeprovenance.png"  style="min-height:500px;max-height:500px;width:100%"/>
				<div class="carousel-caption d-none d-md-block">
					<h3>{{ 'mma.home.origin'|trans }}</h3>
					<p>{{ 'mma.home.origin.comment'|trans }}</p>
				</div>
			</div>
		</div>

		<!-- Left and right controls -->
		<a class="left carousel-control" href="#myCarousel" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span> <span
			class="sr-only"></span>
		</a> <a class="right carousel-control" href="#myCarousel"
			data-slide="next"> <span
			class="glyphicon glyphicon-chevron-right"></span> <span
			class="sr-only"></span>
		</a>
	</div>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-12">
			<div class="col-lg-2">
				<div>
					<img src="/images/legumes/gombo.PNG" class="img-rounded"
						height="150px" width="150px" />
				</div>
				<div class="col-lg-12">
					<p> Gombo </p>
