<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{% block title %}mon march√© africain{% endblock %}</title>

<link rel="icon" type="image/x-icon" href="{{ asset('/images/mon-marche-africain-ico.ico') }}" />
<link
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
	rel="stylesheet" />
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script
	src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
	
    <script src="https://www.paypalobjects.com/api/checkout.js"></script>
<link rel="stylesheet"
	href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.css">
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="{{ asset('bundles/fosjsrouting/js/router.js')}}"></script>
<script src="{{asset('js/fos_js_routes.js')}}"></script>

<script src="{{asset('js/michouafroshop.core.js')}}"></script>

<link href="{{ asset('css/michouafroshop.css') }}" rel="stylesheet" />
<link href="{{ asset('css/tree.css') }}" rel="stylesheet" />

{% block stylesheets %}
{% endblock %}
{% block javascripts %}

{% endblock %}
</head>

<body >
	<div class="col-lg-1 col-md-1 col-sm-1"></div>
	<div class="col-lg-10 col-md-10 col-sm-10">
			<div class="row" style="height: 10px"></div>
			<div class="row">
				<div class="col-lg-5"></div>
				<div class="col-lg-2">
					<a href="{{ path('start_controller_start',{'_locale':'de'}) }}"> <img
						src="{{ asset('images/drapeau-allemend.png') }}"
						style="height: 15px;" /></a> <a
						href="{{ path('start_controller_start',{'_locale':'fr'}) }}"> <img
						src="{{ asset('images/drapeau-francais.png') }}"
						style="height: 15px;" /></a> <a
						href="{{ path('start_controller_start',{'_locale':'en'}) }}"> <img
						src="{{ asset('images/drapeau-anglais.jpg') }}"
						style="height: 15px;" /></a>
				</div>


				{% if app.session.get('compte') != null %}
				<div class="col-lg-3">
					<a class="nav-link"
						href="{{ path('profil_controller_open_profil',{'id': app.session.get('compte').id,'_locale':app.request.locale}) }}"
						{{ app.session.get('compte').id }}> {{ app.session.get('compte').nom }}
						{{ app.session.get('compte').prenom }}</a>
				</div>
				<div class="col-lg-2">
					<a class="nav-link  pull-right"
						href="{{ path('connection_controller_deconnexion',{'_locale':app.request.locale}) }}">{{ 'mma.logout'|trans }}</a>
				</div>
				{% else %}
				<div class="col-lg-3"></div>
				<div class="col-lg-2">
					<a class="nav-link  pull-right" href="/{{ app.request.locale }}/connexion">{{ 'mma.connection'|trans }}</a>
				</div>
				{% endif %}
			</div>

			{{  include("logo-recherche.html.twig") }}
			<div class="row">
                {{  include("menu-bar.html.twig") }}
			</div>
			<div class="conatiner">
				<div class="row">
						{% if (page != 'start') %}
    						<div class="col-lg-3 col-md-4 col-sm-4" >
			                    {{  include("vertical-menu.html.twig") }}
    						</div>
						{% endif %}
						
						{% if(page == 'start') %}
						<div class="col-lg-12 col-md-10 col-sm-10 content">
						{% else %}
						<div class="col-lg-9 col-md-8 col-sm-8 content" >
						{% endif %}
    						{% block body %}
    						{% endblock %}
						</div>
						
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-1 col-md-1 col-sm-1"></div>
	
	<script>


// Get the element with id="defaultOpen" and click on it
document.getElementById("defaultOpen").click();
	$(function() {
		$(".sortable").sortable({
			containment : "parent",
			placeholder : "ui-state-highlight"
		});
	});
  
</script>
</body>
</html>
