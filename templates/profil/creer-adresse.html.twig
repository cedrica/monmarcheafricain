<form method="post" action="/profil/creer-adresse/{{ id }}">
<div id="ajouterAdressseModal" id="creer_adresse_dialog"
	class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Creer une nouvelle adresse</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label for="inputPays">Pays</label> <input type="text"
						required="true" class="form-control" id="inputPays"
						placeholder="Pays" name="pays">
				</div>
				<div class="form-group-row">
					<div class="col-xs-3" style="padding: 0px;">
						<label for="inputPrenom">BP</label> <input type="text"
							required="true" class="form-control" id="inputBP"
							name="boitePostale" placeholder="BP">
					</div>
					<div class="col-xs-9" style="padding: 0px;">
						<label for="inputPrenom">Ville</label> <input type="text"
							required="true" name="ville" class="form-control" id="inputVille"
							placeholder="Ville">
					</div>
				</div>
				<div class="form-group">
					<label for="inputPays">Rue et nr.</label> <input type="text"
						required="true" class="form-control" id="inputRue"
						placeholder="Rue et nr." name="rueEtNr">
				</div>

			</div>
			<div class="modal-footer">
				<button type="submit" class="btn michou-btn">Creer</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
			</div>
		</div>
	</div>
</div>
</form>
